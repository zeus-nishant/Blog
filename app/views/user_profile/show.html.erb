<h1>User Profile</h1>
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>
<p>Bio: <%= @user.bio %></p>
<p>Location: <%= @user.location %></p>

<h2>Blog Posts</h2>
<% if @user.blog_posts.any? %>
  <ul>
    <% @user.blog_posts.each do |blog_post| %>
      <li><%= link_to blog_post.title, blog_post_path(blog_post) %></li>
    <% end %>
  </ul>
<% else %>
  <p>No blog posts found.</p>
<% end %>
