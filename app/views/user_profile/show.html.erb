<div>
  <h1 class="font-bold text-4xl"><%= @user.name %></h1>
  <h2 class="text-2xl">Blogs</h2>
  <% if @user.blogs.any? %>
    <ul>
      <% @user.blogs.each do |blog| %>
        <li><%= link_to blog.title, blog_path(blog) %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No blogs found.</p>
  <% end %>
</div>