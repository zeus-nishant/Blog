<% if @users.any? %>
  <h1>Users</h1>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= link_to user.name, user_profile_path(user.id) %>
        <% if user_signed_in? && user != current_user %>
          <% unless current_user.followed_users.include?(user) %>
            <%= button_to "Follow", follow_user_path(user), method: :post %>
          <% else %>
            <%= button_to "Unfollow", follow_user_path(user), method: :delete %>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

